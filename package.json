{
  "name": "w4ll-e-renderer",
  "version": "2.2.0",
  "description": "Aplicativo de desktop para automatizar a renderização e renomeação de vídeos.",
  "main": "main.js",
  "scripts": {
    "start": "npx electron .",
    "build": "electron-builder",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "Sidney T. Silva",
  "license": "ISC",
  "devDependencies": {
    "electron": "^28.2.0",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.stm.w4lle",
    "productName": "W4ll-E",
    "files": [
      "main.js",
      "preload.js",
      "renderer.js",
      "index.html",
      "style.css",
      "scripts/**/*",
      "assets/**/*"
    ],
    "extraResources": [
      {
        "from": "./ffmpeg/",
        "to": "ffmpeg",
        "filter": [
          "**/*"
        ]
      }
    ],
    "asarUnpack": [
      "**/ffmpeg/**"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
